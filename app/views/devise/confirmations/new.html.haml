.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h1.panel-title Resend confirmation instructions

      .panel-body

        = form_for(resource, as: resource_name,
          url: confirmation_path(resource_name), html: {method: :post}) do |f|

          = devise_error_messages!

          .form-group
            = f.label :email, class: 'control-label'
            = f.email_field :email, autofocus: true, class: 'form-control'

          = f.button "Resend confirmation instructions", class: 'btn btn-primary',
            data: {disable_with: "#{fa_icon('spinner spin')} Sending"}

        = render "devise/shared/links"
