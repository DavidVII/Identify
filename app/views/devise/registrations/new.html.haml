.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h1.panel-title Sign up
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!

          %div.form-group
            = f.label :first_name, class: 'control-label'
            = f.text_field :first_name, class: 'form-control'

          %div.form-group
            = f.label :middle_name, class: 'control-label'
            = f.text_field :middle_name, class: 'form-control'

          %div.form-group
            = f.label :last_name, class: 'control-label'
            = f.text_field :last_name, class: 'form-control'

          %div.form-group
            = f.label :date_of_birth, class: 'control-label'
            = f.text_field :date_of_birth, placeholder: 'MM/DD/YY', class: 'form-control'

          %div.form-group
            = f.label :email, class: 'control-label'
            = f.email_field :email, class: 'form-control'

          %div.form-group
            = f.label :password, class: 'control-label'
            = f.password_field :password, autocomplete: "off", class: 'form-control'

          %div.form-group
            = f.label :password_confirmation, class: 'control-label'
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

          %div= f.submit "Sign up", class: 'btn btn-primary'

        = render "devise/shared/links"
