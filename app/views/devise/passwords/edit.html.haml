.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h1.panel-title Change your password

      .panel-body
        = form_for(resource, as: resource_name,
          url: password_path(resource_name), html: { method: :put }) do |f|

          = devise_error_messages!
          = f.hidden_field :reset_password_token

          .form-group
            = f.label :password, "New password", class: 'control-label'
            = f.password_field :password, class: 'form-control'

          .form-group
            = f.label :password_confirmation, "Confirm new password", class: 'control-label'
            = f.password_field :password_confirmation, class: 'form-control'

          = f.button "Change my password", class: 'btn btn-primary',
            data: {disable_with: "#{fa_icon('spinner spin')} Saving"}

        = render "devise/shared/links"
