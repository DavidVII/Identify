.container
  .row
    .col-md-3
      %h2
        Your Checklist

      %ul.app-checklist.list-unstyled
        %li
          = fa_icon 'check'
          Confirmed Email
        %li
          = fa_icon 'times'
          Verified
        %li
          = fa_icon 'times'
          Questionnaire

    .col-md-9
      %h2
        Get Verified

      = form_for @user, method: :post, html: {class: 'verification-form'} do |f|
        .form-group
          = f.label :first_name, class: 'control-label'
          = f.text_field :first_name, disabled: true, class: 'form-control'

        .form-group
          = f.label :middle_name, class: 'control-label'
          = f.text_field :middle_name, disabled: true, class: 'form-control'

        .form-group
          = f.label :last_name, class: 'control-label'
          = f.text_field :last_name, disabled: true, class: 'form-control'

        .form-group
          = f.label :date_of_birth, class: 'control-label'
          = f.text_field :date_of_birth, disabled: true, class: 'form-control'

        = f.button "Submit", class: 'btn btn-primary',
          data: {disable_with: "#{fa_icon('spinner spin')} Submitting"}

